---
// src/pages/biblioteca/tratados_manuales.astro
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="Poder Judicial de Guinea Ecuatorial | Tratados y Manuales">
    <section class="max-w-7xl mx-auto px-5 py-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">
            Tratados y Manuales Jurídicos
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-20">
            <!-- Ejemplo de documento 1 -->
            <div
                class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow"
            >
                <div class="h-48 bg-gray-100 flex items-center justify-center">
                    <img
                        src="/images/logo.png"
                        alt="Portada Tratado de Derecho Civil"
                        class="h-full object-cover"
                    />
                </div>
                <div class="p-4">
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">
                        Tratado de Derecho Civil
                    </h2>
                    <p class="text-gray-600 mb-4">Edición 2023 - 450 páginas</p>
                    <div class="flex space-x-2">
                        <a
                            href="/docs/tratado-derecho-civil.pdf"
                            download
                            class="bg-primary text-white px-3 py-2 rounded text-sm hover:scale-105 transition-transform"
                        >
                            Descargar PDF
                        </a>
                        <a
                            href="/viewer?file=tratado-derecho-civil.pdf"
                            class="border border-primary text-primary px-3 py-2 rounded text-sm hover:scale-105 transition-transform"
                        >
                            Ver online
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Paginación -->
        <div class="flex justify-center mt-8">
            <nav class="inline-flex rounded-md shadow">
                <a
                    href="#"
                    class="px-3 py-2 rounded-l-md border border-gray-300 bg-white text-gray-500 hover:bg-gray-50"
                >
                    Anterior
                </a>
                <a
                    href="#"
                    class="px-3 py-2 border-t border-b border-gray-300 bg-white text-gray-500 hover:bg-gray-50"
                >
                    1
                </a>
                <a
                    href="#"
                    class="px-3 py-2 border border-gray-300 bg-blue-600 text-white"
                >
                    2
                </a>
                <a
                    href="#"
                    class="px-3 py-2 border-t border-b border-gray-300 bg-white text-gray-500 hover:bg-gray-50"
                >
                    3
                </a>
                <a
                    href="#"
                    class="px-3 py-2 rounded-r-md border border-gray-300 bg-white text-gray-500 hover:bg-gray-50"
                >
                    Siguiente
                </a>
            </nav>
        </div>
    </section>
</MainLayout>
