---
import MainLayout from "../../layouts/MainLayout.astro";
import {
    corteSuprema,
    ordenCargosCorteSuprema,
} from "../../config/constants/consejo";

const miembrosOrdenados = corteSuprema;
---

<MainLayout
    title="Poder Judicial de Guinea Ecuatorial | Corte Suprema de Justicia"
>
    <!-- Hero Section -->
    <section
        class="relative bg-primary text-white py-20 bg-[url('/images/csj/todos.webp')] bg-top bg-no-repeat bg-cover mb-12 h-[500px] flex items-center"
    >
        <!-- Capa oscura superpuesta -->
        <div class="absolute inset-0 bg-black/40"></div>

        <!-- Contenido centrado -->
        <div class="relative z-10 max-w-7xl mx-auto px-5 text-center w-full">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">
                Corte Suprema de Justicia
            </h1>
            <p class="text-xl md:text-2xl max-w-3xl mx-auto">
                Ã“rgano judicial de Guinea Ecuatorial
            </p>
        </div>
    </section>

    <!-- Members Grid -->
    <section class="max-w-7xl mx-auto px-3 md:px-5 py-16">
        <!-- Fila 1: Presidente (1 card) -->
        <div class="grid grid-cols-1 gap-8 mb-8 max-w-sm md:max-w-md mx-auto">
            {
                miembrosOrdenados.slice(0, 1).map((miembro) => (
                    <article class="bg-white rounded-xl shadow-lg overflow-hidden transition-transform hover:shadow-xl hover:-translate-y-1">
                        <div class="h-96 md:h-[28rem] bg-blue-100 flex items-center justify-center overflow-hidden">
                            <img
                                src={miembro.foto}
                                alt={miembro.nombre}
                                class="h-full w-full object-cover object-top"
                                loading="lazy"
                            />
                        </div>
                        <div class="p-4 md:p-6">
                            <div>
                                <span class="text-sm font-semibold text-secondary">
                                    {miembro.cargo
                                        .replace(
                                            "de la Corte Suprema de Justicia",
                                            "",
                                        )
                                        .trim()}
                                </span>
                                <h2 class="text-xl font-bold text-gray-800 mt-1">
                                    {miembro.nombre}
                                </h2>
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>

        <!-- Fila 2: Magistrados (4 cards) -->
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8 mb-8"
        >
