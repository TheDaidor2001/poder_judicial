---
import Navbar from "../components/Navbar.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Poder Judicial de Guinea Ecuatorial | Contacto">
    <section class="max-w-7xl mx-auto px-5 xl:px-0 py-20">
        <!-- Hero Section -->
        <div class="relative bg-primary/10 rounded-xl overflow-hidden mb-16">
            <div class="relative z-10 py-20 px-8 md:px-16">
                <h1 class="text-4xl md:text-5xl font-bold text-primary mb-4">
                    Contacte con el Palacio de Justicia
                </h1>
                <p class="text-xl text-gray-600 max-w-2xl">
                    Estamos a su disposición para atender sus consultas y
                    solicitudes relacionadas con la administración de justicia.
                </p>
            </div>
        </div>

        <!-- Grid de Contacto -->
        <div class="grid md:grid-cols-2 gap-12">
            <!-- Formulario -->
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">
                    Formulario de contacto
                </h2>
                <!-- ID corregido: contactForm -->
                <form id="contactForm" class="space-y-6">
                    <div>
                        <label for="nombre" class="block text-gray-700 mb-2"
                            >Nombre completo <span class="text-red-500">*</span
                            ></label
                        >
                        <input
                            type="text"
                            id="nombre"
                            name="nombre"
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-colors"
                        />
                        <span
                            class="error-message text-red-500 text-sm mt-1 hidden"
                            >Este campo es obligatorio</span
                        >
                    </div>
                    <div>
                        <label for="email" class="block text-gray-700 mb-2"
                            >Correo electrónico <span class="text-red-500"
                                >*</span
                            ></label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-colors"
                        />
                        <span
                            class="error-message text-red-500 text-sm mt-1 hidden"
                            >Ingrese un email válido</span
                        >
                    </div>
                    <div>
                        <label for="asunto" class="block text-gray-700 mb-2"
                            >Asunto <span class="text-red-500">*</span></label
                        >
                        <select
                            id="asunto"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-colors"
                            name="asunto"
                            required
                        >
                            <option value="">Selecciona un asunto</option>
                            <option value="Consulta general"
                                >Consulta general</option
                            >
                            <option
                                value="Información sobre procesos judiciales"
                                >Información sobre procesos judiciales</option
                            >
                            <option value="Solicitud de documentación"
                                >Solicitud de documentación</option
                            >
                            <option value="Denuncia o queja"
                                >Denuncia o queja</option
                            >
                        </select>
                        <span
                            class="error-message text-red-500 text-sm mt-1 hidden"
                            >Seleccione un asunto</span
                        >
                    </div>
                    <div>
                        <label for="mensaje" class="block text-gray-700 mb-2"
                            >Mensaje</label
                        >
                        <textarea
                            id="mensaje"
                            rows="6"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-colors"
                            name="mensaje"
                            placeholder="Escriba su mensaje aquí..."></textarea>
                    </div>
                    <button
                        type="submit"
                        class="bg-secondary hover:bg-primary-dark text-white font-medium py-3 px-6 rounded-lg transition duration-300 cursor-pointer hover:scale-105"
                    >
                        Enviar mensaje
                    </button>
                </form>
            </div>

            <!-- Información de Contacto -->
            <div class="space-y-8">
                <div class="bg-white rounded-xl shadow-lg p-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">
                        Datos de contacto
                    </h2>
                    <div class="space-y-4">
                        <div class="flex items-start">
                            <div class="flex-shrink-0 text-secondary mr-4 mt-1">
                                <!-- Icono de ubicación -->
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">
                                    Sede Principal
                                </h3>
                                <p class="text-gray-600">
                                    Avenida de la Justicia, Malabo<br />Guinea
                                    Ecuatorial
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="flex-shrink-0 text-secondary mr-4 mt-1">
                                <!-- Icono de teléfono -->
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">
                                    Teléfonos
                                </h3>
                                <p class="text-gray-600">
                                    <span class="block"
                                        >+240 333 09 87 65 (Atención al
                                        ciudadano)</span
                                    >
                                    <span class="block"
                                        >+240 555 12 34 56 (Información
                                        judicial)</span
                                    >
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="flex-shrink-0 text-secondary mr-4 mt-1">
                                <!-- Icono de email -->
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">
                                    Correo electrónico
                                </h3>
                                <p class="text-gray-600">
                                    <span class="block"
                                        >contacto@poderjudicial-ge.org</span
                                    >
                                    <span class="block"
                                        >informacion@poderjudicial-ge.org</span
                                    >
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Horario de atención -->
                <div class="bg-white rounded-xl shadow-lg p-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">
                        Horario de atención
                    </h2>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span class="text-gray-700">Lunes a Jueves</span>
                            <span class="font-medium">8:00 - 15:00</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-700">Viernes</span>
                            <span class="font-medium">8:00 - 14:00</span>
                        </div>
                        <div class="pt-4 border-t border-gray-200">
                            <p class="text-gray-600 text-sm">
                                * Para consultas urgentes fuera de horario,
                                envíenos un email y le ayudaremos lo más pronto
                                posible.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mapa -->
        <div class="mt-16 bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="p-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Ubicación</h2>
                <div
                    class="aspect-w-16 aspect-h-9 bg-gray-200 rounded-lg overflow-hidden"
                >
                    <!-- Iframe de Google Maps o similar -->
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3981.3617509916353!2d8.757800374470918!3d3.7310830493009046!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x10669e65419a6f63%3A0xe89ae16f785f08fb!2sPalacio%20De%20Justicia!5e0!3m2!1sen!2sus!4v1748094659451!5m2!1sen!2sus"
                        width="100%"
                        height="450"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        class="w-full h-[450px]"></iframe>
                </div>
            </div>
        </div>
    </section>
</MainLayout>

<style>
    .field-error {
        border-color: #ef4444 !important;
        box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1) !important;
    }

    .field-success {
        border-color: #10b981 !important;
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1) !important;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("contactForm") as HTMLFormElement;

        if (!form) {
            console.error("Formulario no encontrado");
            return;
        }

        // Elementos del formulario
        const nombreInput = document.getElementById(
            "nombre",
        ) as HTMLInputElement;
        const emailInput = document.getElementById("email") as HTMLInputElement;
        const asuntoSelect = document.getElementById(
            "asunto",
        ) as HTMLSelectElement;
        const mensajeTextarea = document.getElementById(
            "mensaje",
        ) as HTMLTextAreaElement;

        // Función para validar email
        function isValidEmail(email: string): boolean {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        // Función para mostrar error en un campo
        function showFieldError(element: HTMLElement, message: string) {
            element.classList.add("field-error");
            element.classList.remove("field-success");

            const errorSpan = element.parentElement?.querySelector(
                ".error-message",
            ) as HTMLElement;
            if (errorSpan) {
                errorSpan.textContent = message;
                errorSpan.classList.remove("hidden");
            }
        }

        // Función para mostrar éxito en un campo
        function showFieldSuccess(element: HTMLElement) {
            element.classList.remove("field-error");
            element.classList.add("field-success");

            const errorSpan = element.parentElement?.querySelector(
                ".error-message",
            ) as HTMLElement;
            if (errorSpan) {
                errorSpan.classList.add("hidden");
            }
        }

        // Función para limpiar estado del campo
        function clearFieldState(element: HTMLElement) {
            element.classList.remove("field-error", "field-success");

            const errorSpan = element.parentElement?.querySelector(
                ".error-message",
            ) as HTMLElement;
            if (errorSpan) {
                errorSpan.classList.add("hidden");
            }
        }

        // Función para validar un campo individual
        function validateField(
            element: HTMLInputElement | HTMLSelectElement | HTMLTextAreaElement,
        ): boolean {
            const value = element.value.trim();

            // El mensaje no es obligatorio
            if (element.id === "mensaje") {
                clearFieldState(element);
                return true;
            }

            // Validar campos obligatorios
            if (!value) {
                showFieldError(element, "Este campo es obligatorio");
                return false;
            }

            // Validación específica para email
            if (element.id === "email" && !isValidEmail(value)) {
                showFieldError(element, "Ingrese un email válido");
                return false;
            }

            // Si todo está bien
            showFieldSuccess(element);
            return true;
        }

        // Validación en tiempo real mientras escriben
        [nombreInput, emailInput, asuntoSelect].forEach((element) => {
            element.addEventListener("blur", () => validateField(element));
            element.addEventListener("input", () => {
                if (element.classList.contains("field-error")) {
                    validateField(element);
                }
            });
        });

        // Validación al enviar el formulario
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const submitButton = form.querySelector(
                'button[type="submit"]',
            ) as HTMLButtonElement;
            const originalText = submitButton.textContent;

            // Crear elemento para mensajes si no existe
            let messageDiv = document.getElementById(
                "form-message",
            ) as HTMLDivElement;
            if (!messageDiv) {
                messageDiv = document.createElement("div");
                messageDiv.id = "form-message";
                messageDiv.className = "p-4 mb-4 rounded-lg";
                form.insertBefore(messageDiv, submitButton);
            }

            // Limpiar mensaje anterior
            messageDiv.textContent = "";
            messageDiv.className = "p-4 mb-4 rounded-lg";

            // Validar todos los campos obligatorios
            const isNombreValid = validateField(nombreInput);
            const isEmailValid = validateField(emailInput);
            const isAsuntoValid = validateField(asuntoSelect);

            // Si algún campo no es válido, no enviar
            if (!isNombreValid || !isEmailValid || !isAsuntoValid) {
                messageDiv.textContent =
                    "Corrija los errores marcados antes de continuar";
                messageDiv.classList.add("bg-red-100", "text-red-700");
                return;
            }

            // Estado de carga
            submitButton.disabled = true;
            submitButton.textContent = "Enviando...";

            try {
                const formData = new FormData(form);

                const response = await fetch("/api/sendEmail.json", {
                    method: "POST",
                    body: formData,
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();

                if (data.success) {
                    messageDiv.textContent = data.message;
                    messageDiv.classList.add("bg-green-100", "text-green-700");
                    form.reset();

                    // Limpiar estados visuales de los campos
                    [
                        nombreInput,
                        emailInput,
                        asuntoSelect,
                        mensajeTextarea,
                    ].forEach((element) => {
                        clearFieldState(element);
                    });
                } else {
                    messageDiv.textContent =
                        data.message || "Error al enviar el mensaje";
                    messageDiv.classList.add("bg-red-100", "text-red-700");
                }
            } catch (error) {
                console.error("Error:", error);
                messageDiv.textContent =
                    error instanceof Error
                        ? error.message
                        : "Error de conexión";
                messageDiv.classList.add("bg-red-100", "text-red-700");
            } finally {
                submitButton.disabled = false;
                submitButton.textContent = originalText;
            }
        });
    });
</script>
