---
import MainLayout from "../layouts/MainLayout.astro";

import {servicios} from '../config/constants/servicios'

// Datos de servicios (puedes mover esto a un archivo JSON después)

---

<MainLayout title="Poder Judicial de Guinea Ecuatorial | Servicios">
    <!-- Hero Section -->
    <section class="max-w-7xl mx-auto px-5 pt-10 pb-16">
        <div class="text-center">
            <h1 class="text-3xl md:text-5xl font-bold text-gray-900 mb-4">
                Servicios Judiciales
            </h1>
            <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                Conozca los servicios que ofrecemos y las tasas judiciales correspondientes
            </p>
        </div>
    </section>

    <!-- Servicios List -->
    <section class="max-w-7xl mx-auto px-5 pb-20 ">
        <div class="grid gap-12">
            {servicios.map((servicio) => (
                <article 
                    id={`servicio-${servicio.id}`}
                    class="bg-white rounded-xl shadow-md overflow-hidden transition-all hover:shadow-lg"
                >
                    <div class="pt-8 px-2 md:p-8">
                        <h2 class="text-lg sm:text-2xl font-bold text-gray-800 mb-4">
                            {servicio.nombre}
                        </h2>
                        <p class="text-gray-600 mb-6">
                            {servicio.descripcion}
                        </p>
                        
                        <!-- Tabla de Tasas -->
                        <div class="overflow-x-scroll">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-2 md:px-6 py-3 text-left text-sm md:text-md font-medium text-gray-500 uppercase tracking-wider">
                                            Rango
                                        </th>
                                        <th class="px-2 md:px-6 py-3 text-left text-sm md:text-md font-medium text-gray-500 uppercase tracking-wider">
                                            Tasa de Expedición (FCFA)
                                        </th>
                                        <th class="px-2 md:px-6 py-3 text-left text-sm md:text-md font-medium text-gray-500 uppercase tracking-wider">
                                            Tasa de Renovación (FCFA)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    {servicio.tasas.map((tasa, index) => (
                                        <tr class={index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                                {tasa.rango}
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                {tasa.expedicion.toLocaleString()}
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                {tasa.renovacion ? tasa.renovacion.toLocaleString() : '-'}
                                            </td>
                                        </tr>
                                    ))}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </section>

    <!-- Información Adicional -->
    <section class="bg-gray-50 py-12 ">
        <div class="max-w-7xl mx-auto px-5 mb-10">
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold text-gray-800">
                    Otros Servicios Judiciales
                </h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {[
                    "Protesto de letra de cambio y poderes",
                    "Inscripciones de pensiones y rentas vitalicias",
                    "Sociedades: Constitución",
                    "Fianzas",
                    "Hipotecas-constitución",
                    "Pignoraciones cacao y café",
                    "Inversión cacao y café",
                    "Constitución de sociedades mercantiles",
                    "Registro de propiedad",
                    "Legalización de actas de reuniones",
                    "Registro de empresas, sociedades"
                ].map((servicio) => (
                    <div class="bg-white p-6 rounded-lg shadow hover:shadow-md transition-shadow">
                        <h3 class="font-medium text-lg text-gray-800">
                            {servicio}
                        </h3>
                        <p class="mt-2 text-gray-600 text-sm">
                            Consulte las tasas en nuestras oficinas
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </section>
</MainLayout>

<style>
        /* Animaciones suaves para las tablas */
        table {
            transition: all 0.3s ease;
        }
        
        tr {
            transition: background-color 0.2s ease;
        }
        tr:hover {
            background-color: #f3f4f6; /* Equivalente a bg-gray-100 */
        }
        
        /* Estilo para el enlace activo */
        [id^="servicio-"]:target {
            outline: 2px solid #3b82f6; /* Equivalente a ring-2 ring-blue-500 */
            animation: highlight 2s ease;
        }
        
        @keyframes highlight {
            0% { background-color: #eff6ff; } /* Equivalente a bg-blue-50 */
            100% { background-color: #ffffff; } /* Equivalente a bg-white */
        }
    </style>