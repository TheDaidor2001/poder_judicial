---
import RightArrow from "../icons/rightArrow.astro";

interface Props {
    title: string;
    subtitle: string;
    description: string;
    href: string;
}

const { description, href, subtitle, title } = Astro.props;
---

<article class="rounded-md shadow-lg h-full flex flex-col">
    <!-- Flex para manejar altura -->
    <img
        src="https://placehold.co/600x400"
        alt=""
        class="rounded-t-md w-full"
    />
    <div class="p-5 flex flex-col flex-grow">
        <!-- Contenedor flexible -->
        <h4 class="text-2xl font-medium mb-1">{title}</h4>
        <h5 class="text-lg mb-3">{subtitle}</h5>
        <p class="text-md text-gray-700 mb-4">
            <!-- Quitamos flex-grow -->
            {description}
        </p>

        <!-- Enlace con mt-auto para pegarlo al final -->
        <div class="text-right mt-auto">
            <!-- mt-auto lo empuja hacia abajo -->
            <a
                href={href}
                class="inline-flex items-center text-secondary gap-x-2 px-3 py-1 rounded-2xl hover:bg-secondary group transition-colors duration-300"
            >
                <span class="group-hover:text-white">Ver m√°s</span>
                <RightArrow
                    classname="size-4 text-secondary mt-1 group-hover:text-white"
                />
            </a>
        </div>
    </div>
</article>
