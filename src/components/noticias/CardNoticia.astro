---
import MiniArrowRigth from "../icons/miniArrowRigth.astro";

interface Props {
    date: string;
    title: string;
    description: string;
    url?: string;
    image: string;
}

const { date, description, title, url, image } = Astro.props;
const newsUrl = url || `/noticias/esto_es_una_noticia`;
---

<article
    class="group py-6 px-6 hover:bg-gray-50 transition-all duration-200 first:rounded-t-lg last:rounded-b-lg"
>
    <a href={newsUrl} class="block group/link">
        <div class="flex gap-x-5 mb-2">
            <img
                src={image}
                alt={title}
                class="w-32 h-32 aspect-square rounded-md object-cover"
            />
            <!-- Título -->
            <h3
                class="text-2xl md:text-3xl font-bold text-gray-900 group-hover/link:text-primary transition-colors duration-200 mb-3 leading-tight"
            >
                {title}
            </h3>
        </div>

        <!-- Subtítulo/Descripción -->
        <p class="text-gray-600 text-base leading-relaxed mb-3">
            {description}
        </p>

        <!-- Fecha -->
        <div class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
            </svg>
            <time class="font-medium capitalize">{date}</time>
        </div>

        <!-- CTA -->
        <span
            class="inline-flex items-center gap-1 text-sm font-medium text-primary group-hover/link:gap-2 transition-all duration-200"
        >
            Leer más
            <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
            </svg>
        </span>
    </a>
</article>
